<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Pantry</title>
</head>
<body>
  <%- include('../partials/_navbar') %>
  <h1>Welcome to my Pantry</h1>
  <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
  <ul>
    <% if (pantry.length > 0) { %>
      <% pantry.forEach(food => { %>
        <li>
          <%= food.name %>
          <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
          <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    <% } else { %>
      <li>There are no items in this pantry.</li>
    <% } %>
  </ul>
</body>
</html>
